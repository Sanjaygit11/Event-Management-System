@model EventManagementSystem.Models.Event

@{
    ViewBag.Title = "Delete Event";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="~/Content/DeleteEvent.css" />

<div class="delete-event-container">
    <h2 class="delete-title">Delete Event</h2>
    <div class="delete-warning">
        <p>Are you sure you want to delete the following event?</p>
    </div>

    <div class="event-details-table">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.Date.ToString("dd/MM/yyyy")</td>
                    <td>@Model.Location</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form action="@Url.Action("DeleteEventConfirmed", "Admin", new { id = Model.EventId })" method="post" class="delete-form">
        @Html.AntiForgeryToken()
        <div class="button-container">
            <button type="submit" class="btn-danger" onclick="return confirmDelete()">Yes, Delete</button>
            <a href="@Url.Action("ManageEvents", "Admin")" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this event? This action cannot be undone.");
    }
</script>
