@model EventManagementSystem.Models.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
}
<link rel="stylesheet" href="~/Content/AdminDashboard.css" />

<h1 class="text-center mb-4">Admin Dashboard</h1>

<!-- Top Three Containers using CSS Grid -->
<div class="grid-container mb-5">
    <!-- Manage User Accounts -->
    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">Manage User Accounts</h4>
            <p class="card-text">View or delete user accounts from the system.</p>
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">Go</a>
        </div>
    </div>

    <!-- Manage Events -->
    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">Manage Events</h4>
            <p class="card-text">Create, update, or delete events in the system.</p>
            <a href="@Url.Action("ManageEvents", "Admin")" class="btn btn-success">Go</a>
        </div>
    </div>

    <!-- View Registered Events -->
    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">View Registered Events</h4>
            <p class="card-text">See all the events registered by users.</p>
            <a href="@Url.Action("ViewRegisteredEvents", "Admin")" class="btn btn-info">Go</a>
        </div>
    </div>
</div>

<!-- Event Details Section -->
<h3 class="mt-5">Event Details</h3>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Event Title</th>
            <th>Registration Count</th>
            <th>Available Seats</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventDetail in Model.EventDetails)
        {
            <tr>
                <td>@eventDetail.EventTitle</td>
                <td>@eventDetail.RegistrationCount</td>
                <td>@eventDetail.AvailableSeats</td>
            </tr>
        }
    </tbody>
</table>

<!-- Back Button -->
<div class="mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
</div>
