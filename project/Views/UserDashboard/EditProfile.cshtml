@model EventManagementSystem.Models.User

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>
<link href="~/Content/Edit_profile.css" rel="stylesheet" />


@using (Html.BeginForm("EditProfile", "UserDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiddleName)
        @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MiddleName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EmailID)
        @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmailID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MobileNo)
        @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MobileNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Gender)
        @Html.DropDownListFor(model => model.Gender, new SelectList(new[] { "Male", "Female", "Other" }), "Select Gender", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Gender)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth)
        @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.DateOfBirth)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CityResiding)
        @Html.TextBoxFor(model => model.CityResiding, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CityResiding)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CountryResiding)
        @Html.TextBoxFor(model => model.CountryResiding, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CountryResiding)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hobbies)
        @Html.TextBoxFor(model => model.Hobbies, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Hobbies)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProfilePhotoPath)
        <input type="file" name="ProfilePhoto" class="form-control" />
        @Html.ValidationMessageFor(model => model.ProfilePhotoPath)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
}

<a href="@Url.Action("Index", "UserDashboard")" class="btn btn-secondary">Back to Dashboard</a>


