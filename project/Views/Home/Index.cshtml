@{
    ViewBag.Title = "Home - Event Management System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Home.css" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="container-fluid text-center">
        <h1>Welcome to Our Event Management System</h1>
        <p>Your one-stop platform to manage and participate in events seamlessly.</p>
        <a href="@Url.Action("Index", "Event")" class="btn btn-primary btn-lg">Explore Events</a>
    </div>
</section>

<!-- About Section -->
<section class="about-section py-5">
    <div class="container">
        <h2 class="text-center">About Us</h2>
        <p class="text-center">
            We offer a powerful event management system that makes organizing and participating in events easy. Whether you're an attendee or an organizer, our platform has something for you.
        </p>
    </div>
    <!-- Upcoming Events Section -->
    <section class="upcoming-events py-5">
        <div class="container">
            <h2 class="text-center mb-4">Upcoming Events</h2>
            <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel">
                <!-- Carousel Inner -->
                <div class="carousel-inner">
                    @for (int i = 0; i < ((IEnumerable<EventManagementSystem.Models.Event>)ViewBag.UpcomingEvents).Count(); i += 3)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="d-flex justify-content-center">
                                @foreach (var eventItem in ((IEnumerable<EventManagementSystem.Models.Event>)ViewBag.UpcomingEvents).Skip(i).Take(3))
                                {
                                    <div class="card event-card mx-2">
                                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                                        {
                                            <img src="@Url.Content(eventItem.ImageUrl)" alt="@eventItem.Title" class="card-img-top">
                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/Content/Image/placeholder.jpg")" alt="Event Image" class="card-img-top">
                                        }

                                        <div class="card-body text-center">
                                            <h5 class="card-title">@eventItem.Title</h5>
                                            <p class="card-text">@eventItem.Description</p>
                                            <p><strong>Date:</strong> @eventItem.Date.ToString("dd-MM-yyyy")</p>
                                            <p><strong>Location:</strong> @eventItem.Location</p>
                                            <a href="@Url.Action("Details", "Event", new { id = eventItem.EventId })" class="btn btn-primary">View Details</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>



    <!-- Partner Section -->
    <section class="partners py-5">
        <div class="container">
            <h2 class="text-center">Our Partners</h2>
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Content/Image/bookmyshow-logo.jpg" alt="Partner 1" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/Content/Image/pixabay-3951079_1280.png" alt="Partner 2" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/Content/Image/bird-7122682_1280.png" alt="Partner 3" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/Content/Image/event-2930674_1280.png" alt="Partner 4" class="img-fluid">
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq py-5">
        <div class="container">
            <h2 class="text-center">Frequently Asked Questions</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            How do I register for an event?
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            To register for an event, simply go to the event details page and click on the "Register" button.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Can I create my own event?
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Yes, as an admin, you can easily create and manage events on the platform.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="cta-section text-center py-5">
        <div class="container">
            <h2>Ready to Host or Join an Event?</h2>
            <p>Get started today and experience seamless event management.</p>
            <a href="@Url.Action("Index", "Event")" class="btn btn-primary btn-lg">Explore Events</a>
        </div>
    </section>
